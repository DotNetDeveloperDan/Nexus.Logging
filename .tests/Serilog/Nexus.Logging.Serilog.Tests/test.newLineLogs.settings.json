{
  "ApplicationName": "Nexus.Logging.Serilog.Tests",
  "AppSettings": {
    "Environment": "UnitTests"
  },
  "Logging": {
    "MinimumLevel": "Info",
    "Filters": {
      "Microsoft": "Error",
      "System": "Error"
    },
    "OutputTemplate": "$NexusJsonLogFormatter",
    "Targets": [
      {
        "Provider": "Serilog",
        "Type": "Service",
        "Args": {
          "Using": "Nexus.Logging.Serilog.FileSimulatorSink",
          "Name": "FileSimulator"
        }
      }
    ]
  }
}